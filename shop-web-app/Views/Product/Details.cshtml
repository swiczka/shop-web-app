@model Product
@using shop_web_app.Enums;
@using shop_web_app.Models.SizeQuantity
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="main-container">
    <section class="bg-white space-sm">
        <div class="container">
            <div class="row">
                @{
                    ProductVariant defaultVariant = Model.ProductVariants.ElementAtOrDefault(0);
                }
                <div class="col-lg-7 mb-4 mb-sm-0">
                    <img alt="Image" id="mainImage" src="@defaultVariant.Photos.First().PhotoUrl" class="rounded img-fluid" />
                </div>
                <!--end of col-->
                <div class="col-lg-5 d-flex flex-column justify-content-between mr-auto ml-auto">
                    <div class="mb-3">
                        <h1 class="mb-2">@Model.Name</h1>
                        <h2 class="lead mb-3">@Model.Gender.ToFriendlyString()/@Model.SubCategory.ToFriendlyString()</h2>
            
                       
                        <div class="mt-5 mb-5">
                            <h4>Materiały:</h4>
                            <ul>
                                @foreach(ProductMaterial material in Model.ProductMaterials)
                                {
                                    <li>@material.Material.ToFriendlyString()</li>
                                }
                            </ul>
                        </div>
                        

                        <div class="row mb-4">
                            <h4>Dostępne warianty:</h4>
                            @{
                                int i = 0;
                            }
                            @foreach(ProductVariant variant in Model.ProductVariants)
                            {
                                <div class="col">
                                    <div class="img-container">
                                        <img 
                                            alt="@variant.Name Thumbnail" 
                                            src="@variant.Photos.First().PhotoUrl" 
                                            class="img-fluid img-thumbnail"
                                            onclick="changeVariant(this)"
                                            data-variant-index="@i"
                                        />
                                    </div>
                                </div>
                                if(i % 3 == 0 && i != 0)
                                {
                                    <div class="mb-4"></div>
                                }
                                i++;
                            } 
                        </div>

                        <h4 class="mb-3">Wybierz rozmiar</h4>
                        <div class="mb-3" id="sizesContainer">
                            @if(Model.Category != Category.Shoes){
                                <select class="form-select form-select mb-3" style="width: 180px;">
                                    <option selected>Wybierz rozmiar</option>
                                    @foreach(InternationalSizeQuantity sq in defaultVariant.InternationalSizeQuantity)
                                    {
                                        if(sq.Quantity > 0)
                                        {
                                            <option value="@sq.Size">@sq.Size</option>
                                        }
                                        else
                                        {
                                            <option disabled class="text-muted" value="@sq.Size">@sq.Size (niedostępne)</option>
                                        }
                                    }
                                </select>
                            }
                            else
                            {
                                <select class="form-select form-select mb-3" style="width: 180px;">
                                    <option selected>Wybierz rozmiar</option>
                                    @foreach (ShoeSizeQuantity sq in defaultVariant.ShoeSizeQuantity)
                                    {
                                        if (sq.Quantity > 0)
                                        {
                                            <option value="@sq.Size">@sq.Size</option>
                                        }
                                        else
                                        {
                                            <option disabled class="text-muted" value="@sq.Size">@sq.Size (niedostępne)</option>
                                        }
                                    }
                                </select>
                            }
                        </div>
                    </div>
                    <div>
                        <div class="btn-group mb-2">
                            <input type="hidden" id="selectedVariantIndex" name="SelectedVariantIndex" value="0" />
                            <button type="button" class="btn btn-success btn-lg">@Model.Price PLN</button>
                            <button type="button" class="btn btn-success" aria-haspopup="true" aria-expanded="false">
                                <span class="sr-only">Dodaj do koszyka</span>
                            </button>
                        </div>
                    </div>
                </div>
                <!--end of col-->
            </div>
            <!--end of row-->
        </div>
        <!--end of container-->
    </section>
    <!--end of section-->
    <section class="bg-white space-sm">
        <hr />
        <div class="container">
            <h4>O produkcie</h4>
            <p>@Model.Description</p>
        </div>
    </section>
</div>
<script>
    const variantData = @Html.Raw(Json.Serialize(Model.ProductVariants));
</script>
