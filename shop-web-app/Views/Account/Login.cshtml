@{
    ViewData["Title"] = "Logowanie";
}
@model LoginViewModel


<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4 col-sm-8">
        <h2 class="mb-3">Zaloguj się do swojego konta</h2>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <span><b>Błąd!</b> - @TempData["Error"]</span>
            </div>
        }

        <form asp-action="Login">
            <div class="form-group mb-3">
                <label asp-for="Email">Adres e-mail</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Wprowadź adres e-mail">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password">Hasło</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Wprowadź hasło">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group text-end">
                <input type="submit" class="btn btn-outline-success" value="Zaloguj się" />
            </div>
        </form>
    </div>
</div>
